$titleFont = 'Montserrat', sans-serif;

body
  background #e93
  font-family sans-serif
  margin 0
  padding 0

header
  background darken(#e93, 20%)
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.2)

  h1
    color #fff
    font 20px $titleFont
    margin 0
    padding 12px 0

.container
  max-width 960px
  margin-left auto
  margin-right auto

.pull-left
  float left

.pull-right
  float right

.clearfix
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both
