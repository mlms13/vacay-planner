$titleFont = 'Montserrat', sans-serif;

body
  background #e93
  font-family sans-serif
  margin 0
  padding 0

header
  background darken(#e93, 20%)
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.2)

  h1
    color #fff
    font 20px $titleFont
    margin 0
    padding 12px 0

.container
  max-width 960px
  margin-left auto
  margin-right auto

.card
  background #eee
  box-shadow 1px 2px 5px rgba(0, 0, 0, 0.25);
  padding 20px
  margin-top 12px

.pull-left
  float left

.pull-right
  float right

.half
  float left
  width 50%

.block
  display block

.clearfix
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

.text-light
  color #aaa

.text-med
  color #777

.text-dark
  color #444
